{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": ["node", "vite/client"]   // ← optional but nice
  },
  "include": [
    "src",
    "api",
    "emails",
    "types",
    "vite-env.d.ts",
    "vite.config.ts",                   // ← optional
    "scripts/**/*.ts"                   // ← optional
  ]
}
