{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/send-digest.ts": {
      "runtime": "nodejs20.x",
      "regions": ["sfo1"],
      "memory": 1024,
      "maxDuration": 60
    },
    "api/send-monthly-report.ts": {
      "runtime": "nodejs20.x",
      "regions": ["sfo1"],
      "memory": 1024,
      "maxDuration": 60
    },
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "regions": ["sfo1"]
    }
  },
  "crons": [
    { "path": "/api/send-digest", "schedule": "0 9 * * 1" },
    { "path": "/api/send-monthly-report", "schedule": "0 9 1 * *" }
  ]
}
