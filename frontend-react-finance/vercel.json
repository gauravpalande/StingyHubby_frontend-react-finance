{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },

    { "source": "/((?!api|assets|.*\\..*).*)", "destination": "/index.html" }
  ],

  "crons": [
    { "path": "/api/send-digest", "schedule": "0 16 * * 1" },
    { "path": "/api/send-monthly-report", "schedule": "0 16 1 * *" }
  ]
}
