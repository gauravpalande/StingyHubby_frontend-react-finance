{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "dist/node",

    "noEmit": false,
    "declaration": false,
    "declarationMap": false,

    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node", "vite/client"]
  },
  "include": ["vite.config.ts", "scripts/**/*.ts", "api/**/*.ts"]
}
